<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.campjoy.identitree.starter">

    <application
        android:name=".CJApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".activities.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.campjoy.identitree.starter.MainTabActivity"
            android:label="@string/title_activity_main_tab" />
        <activity android:name="org.campjoy.identitree.starter.MainActivity" />
        <activity android:name="org.campjoy.identitree.starter.activities.TreeInfoActivity" />
        <activity
            android:name="org.campjoy.identitree.starter.activities.QuestionActivity"
            android:label="@string/title_activity_question" />
        <activity
            android:name="org.campjoy.identitree.starter.AboutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_about"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="org.campjoy.identitree.starter.activities.GlossaryActivity" />
    </application>
</manifest>